@{
    if (Model.show is null == false)
    {
        <h1>Results</h1>
        <p>Title: @Model.show.Title</p>
        <p>Episode Count: @Model.show.EpisodeCount</p>
        <p>Description: @Model.show.Description</p>
        <p>Release Date: @Model.show.ReleaseDate</p>
        <p>End Date: @Model.show.EndDate</p>
    }
}