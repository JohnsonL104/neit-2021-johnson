@page
@model SE256_lab5_johnsonl.Pages.AddShowModel
@{
    ViewData["Title"] = "Add Ticket";
}

<h1>Add Ticket</h1>


<form method="post">
    <div class="form-group">
        <label asp-for="show.Title">Title: </label>
        <input type="text" asp-for="show.Title" placeholder="Show Title" class="form-control" /><br />
        <span asp-validation-for="show.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="show.EpisodeCount">Episode Count: </label>
        <input type="number" asp-for="show.EpisodeCount" placeholder="Number of Episodes" class="form-control" /><br />
        <span asp-validation-for="show.EpisodeCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="show.Description">Description: </label>
        <input type="text" asp-for="show.Description" placeholder="Description" class="form-control" /><br />
        <span asp-validation-for="show.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="show.ReleaseDate">Release Date: </label>
        <input type="date" asp-for="show.ReleaseDate" placeholder="Release Date" class="form-control" /><br />
        <span asp-validation-for="show.ReleaseDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="show.EndDate">End Date: </label>
        <input type="date" asp-for="show.EndDate" placeholder="End Date" class="form-control" /><br />
        <span asp-validation-for="show.EndDate" class="text-danger"></span>
    </div>
    <button type="submit">Submit</button>
</form>
<script src="/lib/jquery//dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
